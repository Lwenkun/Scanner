<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPaddingLeft="10dp"
    android:layout_margin="3dp"
    app:contentPaddingTop="8dp"
    app:contentPaddingRight="5dp"
    app:contentPaddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_qr_code"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_width="92dp"
            android:layout_height="92dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:text="夏冬青"
                    android:textColor="#000000"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_marginLeft="10dp"
                    android:text="已签收"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_phone_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:text="15616644482"
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_24dp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:maxLines="2"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:text="湖北省武汉市华中科技大学韵苑16栋"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hidden_info"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_person_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_id_num"
                    android:textSize="14sp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="362202199603020114"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/ib_more"
                android:padding="0dp"
                android:layout_gravity="end|top"
                android:src="@drawable/ic_more_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/ib_expand"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_arrow_down_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>


